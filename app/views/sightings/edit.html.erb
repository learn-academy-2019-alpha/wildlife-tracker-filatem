<h1>Edit Sighting</h1>
<% if @sighting.errors %>
    <% @sighting.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
        </ul>
<% end %>

<%= form_for :sighting, method: :patch do |f| %>
 
<%=f.label :data %>
    <%=f.text_field :date %>
    
<%=f.label :time %>
    <%=f.text_field :time%>
    
<%=f.label :latitude %>
    <%=f.text_field :latitude %>
    
<%=f.label :longitude %>
    <%=f.text_field :longitude %>
    
<%=f.label :region %>
    <%=f.text_field :region %>
    
    <%=f.submit "Edit" %>
<% end %>