<h1>Add a new Sighting!</h1>
<ul><% if @sighting.errors %>
    <% @sighting.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
        </ul>
<% end %>

<%= form_for @sighting do |f| %>
  <%= f.hidden_field :animal_id %>
<%=f.label :data %>
    <%=f.text_field :date %>
    
<%=f.label :time %>
    <%=f.text_field :time%>
    
<%=f.label :latitude %>
    <%=f.text_field :latitude %>
    
<%=f.label :longitude %>
    <%=f.text_field :longitude %>
    
<%=f.label :region %>
    <%=f.text_field :region %>
    
    <%=f.submit "Create" %>
<% end %>
